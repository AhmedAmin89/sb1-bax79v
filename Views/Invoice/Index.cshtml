@model IEnumerable<WarehouseSystem.Models.Invoice>

@{
    ViewData["Title"] = "Invoices";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Invoice</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Invoice #</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Total</th>
            <th>Discount</th>
            <th>Final Total</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.InvoiceId</td>
                <td>@item.DateTime.ToString("g")</td>
                <td>@item.Customer.CustomerName</td>
                <td>@item.InvoiceTotal.ToString("C")</td>
                <td>@item.ManualDiscount.ToString("C")</td>
                <td>@item.TotalAfterDiscount.ToString("C")</td>
                <td>@item.CreatedBy</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.InvoiceId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Print" asp-route-id="@item.InvoiceId" class="btn btn-secondary btn-sm">Print</a>
                </td>
            </tr>
        }
    </tbody>
</table>