@model WarehouseSystem.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Items</h5>
                <p class="card-text display-4">@Model.TotalItems</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Customers</h5>
                <p class="card-text display-4">@Model.TotalCustomers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Vendors</h5>
                <p class="card-text display-4">@Model.TotalVendors</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Warehouses</h5>
                <p class="card-text display-4">@Model.TotalWarehouses</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Recent Transactions</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Item</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Qty</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.RecentTransactions)
                            {
                                <tr>
                                    <td>@transaction.TransactionTime.ToString("g")</td>
                                    <td>@transaction.Item.ItemName</td>
                                    <td>@transaction.FromWarehouse.WarehouseName</td>
                                    <td>@transaction.ToWarehouse.WarehouseName</td>
                                    <td>@transaction.Quantity.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Recent Invoices</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.RecentInvoices)
                            {
                                <tr>
                                    <td>@invoice.DateTime.ToString("g")</td>
                                    <td>@invoice.Customer.CustomerName</td>
                                    <td>@invoice.TotalAfterDiscount.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>