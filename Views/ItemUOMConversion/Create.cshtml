@model WarehouseSystem.Models.ItemUOMConversion

@{
    ViewData["Title"] = "Create UOM Conversion";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="ItemId" class="control-label">Item</label>
                <select asp-for="ItemId" asp-items="ViewBag.Items" class="form-control">
                    <option value="">-- Select Item --</option>
                </select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FromUOMId" class="control-label">From UOM</label>
                <select asp-for="FromUOMId" asp-items="ViewBag.UOMs" class="form-control">
                    <option value="">-- Select UOM --</option>
                </select>
                <span asp-validation-for="FromUOMId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ToUOMId" class="control-label">To UOM</label>
                <select asp-for="ToUOMId" asp-items="ViewBag.UOMs" class="form-control">
                    <option value="">-- Select UOM --</option>
                </select>
                <span asp-validation-for="ToUOMId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConversionRate" class="control-label">Conversion Rate</label>
                <input asp-for="ConversionRate" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ConversionRate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}