<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Warehouse System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Warehouse System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">Master Data</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Item" asp-action="Index">Items</a>
                                <a class="dropdown-item" asp-controller="UnitOfMeasure" asp-action="Index">Units of Measure</a>
                                <a class="dropdown-item" asp-controller="ItemUOMConversion" asp-action="Index">UOM Conversions</a>
                                <a class="dropdown-item" asp-controller="Warehouse" asp-action="Index">Warehouses</a>
                                <a class="dropdown-item" asp-controller="PriceList" asp-action="Index">Price Lists</a>
                                <a class="dropdown-item" asp-controller="ItemPrice" asp-action="Index">Item Prices</a>
                                <a class="dropdown-item" asp-controller="Vendor" asp-action="Index">Vendors</a>
                                <a class="dropdown-item" asp-controller="Customer" asp-action="Index">Customers</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">Transactions</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="WarehouseTransaction" asp-action="Index">Warehouse Transfers</a>
                                <a class="dropdown-item" asp-controller="VendorTransaction" asp-action="Index">Vendor Transactions</a>
                                <a class="dropdown-item" asp-controller="Invoice" asp-action="Index">Invoices</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index">Users</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Warehouse System
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>