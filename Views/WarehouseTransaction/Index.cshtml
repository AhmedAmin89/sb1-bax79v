@model IEnumerable<WarehouseSystem.Models.WarehouseTransaction>

@{
    ViewData["Title"] = "Warehouse Transfers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Transfer</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>From Warehouse</th>
            <th>To Warehouse</th>
            <th>Item</th>
            <th>Quantity</th>
            <th>Transaction Time</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FromWarehouse.WarehouseName</td>
                <td>@item.ToWarehouse.WarehouseName</td>
                <td>@item.Item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.TransactionTime.ToString("g")</td>
                <td>@item.CreatedBy</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TransactionId" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>