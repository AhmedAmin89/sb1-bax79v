@model WarehouseSystem.Models.Item

@{
    ViewData["Title"] = "Create Item";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="ItemName" class="control-label">Name</label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DefaultUOMId" class="control-label">Default UOM</label>
                <select asp-for="DefaultUOMId" asp-items="ViewBag.UOMs" class="form-control">
                    <option value="">-- Select UOM --</option>
                </select>
                <span asp-validation-for="DefaultUOMId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LargeUOMId" class="control-label">Large UOM</label>
                <select asp-for="LargeUOMId" asp-items="ViewBag.UOMs" class="form-control">
                    <option value="">-- Select UOM --</option>
                </select>
                <span asp-validation-for="LargeUOMId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SmallUOMId" class="control-label">Small UOM</label>
                <select asp-for="SmallUOMId" asp-items="ViewBag.UOMs" class="form-control">
                    <option value="">-- Select UOM --</option>
                </select>
                <span asp-validation-for="SmallUOMId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}